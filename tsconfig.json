{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "outDir": "dist",
    "moduleResolution": "node",
    "noEmit": false,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "lib": [
      "es2022"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "main.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}